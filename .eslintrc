---
  env:
    browser: true
    jasmine: true
    phantomjs: true
    jquery: true
  
  globals: 
    angular: true
  rules: 
    camelcase: 2,
    curly: 2
    brace-style: 
      - 2
      - 1tbs
    quotes: 
      - 2
      - single
    semi:
      - 2
      - always
    space-in-brackets:
      - 2
      - never
    space-infix-ops: 2
    angular/ng_controller_name:  
      - 2, 
      - /[A-Z].*Ctrl$/
    angular/ng_on_watch: 2  
  plugins: 
    - angular
