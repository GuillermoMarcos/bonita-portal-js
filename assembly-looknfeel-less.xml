<assembly>
	<id>less</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/main/styles</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>**/*.less</include>
			</includes>
		</fileSet>
        <fileSet>
            <directory>${project.basedir}/main/styles/fonts</directory>
            <outputDirectory>skin/fonts</outputDirectory>
            <includes>
                <include>*.eot</include>
                <include>*.ttf</include>
                <include>*.woff</include>
                <include>*.svg</include>
            </includes>
        </fileSet>
	</fileSets>
</assembly>
